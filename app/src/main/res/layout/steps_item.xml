<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_item_padding"
    android:paddingBottom="@dimen/default_item_padding"
    android:id="@+id/step_list_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/step_short_desc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="@style/TextSubTitleStyle"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_step_button"
        app:layout_constraintEnd_toStartOf="@id/view_step_button"
        android:padding="@dimen/default_item_padding"
        android:text="@string/step_short_desc"
        android:gravity="start|center_vertical"/>

    <ImageView
        android:id="@+id/view_step_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/more_step_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="start|center_vertical"
        android:contentDescription="@string/view_step_button_description"/>

</android.support.constraint.ConstraintLayout>